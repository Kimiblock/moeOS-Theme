# mkinitcpio preset file for the 'linux-lily' package

#ALL_config="/etc/mkinitcpio.conf"
ALL_kver="/boot/vmlinuz-linux-lily"
ALL_microcode=(/boot/*-ucode.img)

PRESETS=('default')

#default_config="/etc/mkinitcpio.conf"
#default_image="/boot/initramfs-linux-lily.img"
default_uki="/efi/EFI/BOOT/BOOTx64.efi"
#default_options="--splash /usr/share/systemd/bootctl/splash-arch.bmp"

#fallback_config="/etc/mkinitcpio.conf"
fallback_image="/boot/initramfs-linux-lily-fallback.img"
#fallback_uki="/efi/EFI/Linux/arch-linux-lily-fallback.efi"
fallback_options="-S autodetect"
