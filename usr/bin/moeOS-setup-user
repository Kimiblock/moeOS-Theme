#!/bin/bash

function _notify(){
	notify-send -i moeos -u normal -t 5 -a moeOS "moeOS Setup" "$1"
	sleep 2
}

function main(){
	checkExist
	_notify "Setting up moeOS"
	rime
	checkExist set
}

function enableSnotify(){
	systemctl --user enable --now snotify
}

function rime(){
	mkdir -p ~/.config/ibus/rime
	mkdir -p ~/.local/share/fcitx5/rime
	if [[ ! -f ~/.config/ibus/rime/default.custom.yaml ]]; then
		ln -s /usr/share/moeOS-Docs/ibus-rime.conf.d/default.custom.yaml ~/.config/ibus/rime/default.custom.yaml
	fi
	if [[ ! -f ~/.local/share/fcitx5/rime/default.custom.yaml ]]; then
		ln -s /usr/share/moeOS-Docs/ibus-rime.conf.d/default.custom.yaml ~/.local/share/fcitx5/rime/default.custom.yaml
	fi
}

function moeOS-setup-librewolf(){
	bash -c "/usr/lib/moeOS/moeOS-setup-librewolf"
}

function checkExist(){
	if [ ! "${XDG_CONFIG_HOME}" ]; then
		export XDG_CONFIG_HOME="${HOME}/.config"
	fi

	if [ "${_moeOS_Setup}" = 1 ]; then
		_notify "_moeOS_Setup detected!"
	elif [ -f "${XDG_CONFIG_HOME}/moeOS/state" ]; then
		moeOS-setup-librewolf
		exit 0
	fi
	if [[ "$@" =~ set ]]; then
		mkdir -p "${XDG_CONFIG_HOME}/moeOS"
		touch "${XDG_CONFIG_HOME}/moeOS/state"
		_notify "moeOS has been set up"
	fi
}

main