#!/bin/bash

function replace(){
    cp /usr/share/moeOS-Docs/os-release /etc/os-release
    cp /usr/share/moeOS-Docs/os-release /usr/lib/os-release
    cp /usr/share/moeOS-Docs/lsb-release /etc/lsb-release
    cp /etc/tlp.d/1-moeOS.conf /etc/tlp.conf
    cp /usr/share/moeOS-Docs/Packagekit.conf /etc/PackageKit/PackageKit.conf
    cp /usr/share/moeOS-Docs/librewolf.d/librewolf.cfg /usr/lib/librewolf/librewolf.cfg
    for unit in power-profiles-daemon bluetooth NetworkManager systemd-oomd; do
		systemctl enable ${unit}
    done
    plymouth-set-default-theme moe
}

function _info() {
	if [ -f /usr/bin/pamac ]; then
		echo "  ==> [Info]: $@"
	else
		all_off="$(tput sgr0)"
		bold="${all_off}$(tput bold)"
		blue="${bold}$(tput setaf 4)"
		yellow="${bold}$(tput setaf 3)"
		printf "${blue}==>${yellow} [Info]:${bold} $1${all_off}\n"
    fi
}

replace
