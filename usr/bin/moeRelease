#!/bin/bash

function replace(){
    ln -sf /usr/share/moeOS-Docs/os-release /etc/os-release
    ln -sf /usr/share/moeOS-Docs/os-release /usr/lib/os-release
    ln -sf /usr/share/moeOS-Docs/lsb-release /etc/lsb-release
    ln -sf /etc/tlp.d/1-moeOS.conf /etc/tlp.conf
    ln -sf /usr/share/moeOS-Docs/Packagekit.conf /etc/Packagekit.conf
    for unit in tlp bluetooth sddm NetworkManager; do
		systemctl enable ${unit}
	done
	plymouth-set-default-theme moe
	mkdir -p /home/*/.config/fontconfig
	ln -sf /etc/fonts/conf.d/1-moeos.conf /home/*/.config/fontconfig/fonts.conf
}

function _info() {
	if [ -f /usr/bin/pamac ]; then
		echo "  ==> [Info]: $@"
	else
		all_off="$(tput sgr0)"
		bold="${all_off}$(tput bold)"
		blue="${bold}$(tput setaf 4)"
		yellow="${bold}$(tput setaf 3)"
		printf "${blue}==>${yellow} [Info]:${bold} $1${all_off}\n"
    fi
}

replace
