#!/bin/bash
function transcode(){
    if [[ $@ =~ v ]]; then
        ffmpeg -hwaccel vaapi -hwaccel_device /dev/dri/renderD128  -i "$1" -vf 'format=nv12,hwupload' -c:v hevc_vaapi -b:v 5M "$2"
    else
        ffmpeg -hwaccel vaapi -hwaccel_device /dev/dri/renderD128  -i "$1" -vf 'format=nv12,hwupload' -c:v hevc_vaapi -b:v 5M "$2" -y -loglevel fatal -nostats
    fi
}

function renameOutput(){
    if [[ "$1" =~ '.mp4' ]]; then
        output="$1".mp4
        echo "[Info] Output is ${output}"
        return 0
    fi
    length=`echo -n "$1" | wc -c`
    for ext in mkv av1; do
        if [[ "$1" =~ ${ext} ]]; then
            echo "[Info] File extension detected: ${ext}"
            cutNumber=4
            cutArg=`expr ${length} - ${cutNumber}`
            output="`echo -n "$1" | cut -c -"${cutArg}"`.mp4"
            echo "[Info] Output is ${output}"
            return 0
        fi
    done
    for ext in webm; do
        if [[ "$1" =~ ${ext} ]]; then
            echo "[Info] File extension detected: ${ext}"
            cutNumber=5
            cutArg=`expr ${length} - ${cutNumber}`
            output="`echo -n "$1" | cut -c -"${cutArg}"`.mp4"
            echo "[Info] Output is ${output}"
            return 0
        fi
    done
}

function main(){
    renameOutput "$1"
    if [[ $@ =~ '-v' ]]; then
        echo "[Debug] Verbose is on"
        sleep 1s
        transcode "$1" "${output}" -v
    else
        transcode "$1" "${output}"
    fi
}

main "$@"
