#!/bin/bash
bwrap \
	--symlink usr/lib /lib \
	--symlink usr/lib64 /lib64 \
	--symlink usr/bin /bin \
	--symlink usr/bin /sbin \
	--ro-bind /usr/lib /usr/lib \
	--ro-bind /usr/lib64 /usr/lib64 \
	--ro-bind /usr/bin /usr/bin \
	--ro-bind /etc /etc \
	--ro-bind /usr/lib/chromium /usr/lib/chromium \
	--ro-bind /usr/share /usr/share \
	--dev /dev \
	--dev-bind /dev/dri /dev/dri \
	--proc /proc \
	--ro-bind /sys/dev/char /sys/dev/char \
	--ro-bind /sys/devices /sys/devices \
	--bind /run /run \
	--tmpfs /tmp \
	--bind "$HOME" "$HOME" \
	/usr/bin/chromium --enable-zero-copy  --enable-wayland-ime --disable-features=WaylandFractionalScaleV1 --ozone-platform-hint=auto --enable-features=VaapiVideoDecodeLinuxGL --use-gl=angle --use-angle=gl --canvas-oop-rasterization "$@"
