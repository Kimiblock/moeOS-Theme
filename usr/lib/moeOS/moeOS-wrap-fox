#!/bin/bash
echo '#!/bin/sh' >/usr/bin/firefox

echo 'bwrap --dev-bind / / --bind /usr/share/fonts/noto-cjk/NotoSansCJK-Medium.ttc /usr/share/fonts/noto-cjk/NotoSansCJK-Regular.ttc --bind /usr/share/fonts/inter/Inter-Medium.ttf /usr/share/fonts/inter/Inter-Regular.ttf --bind /usr/share/fonts/TTF/RobotoMono-Medium.ttf /usr/share/fonts/TTF/RobotoMono-Regular.ttf /usr/lib/firefox/firefox "$@"' >>/usr/bin/firefox

sed -i "s|Exec=/usr/lib/firefox/firefox|Exec=/usr/bin/firefox|" /usr/share/applications/firefox.desktop
